{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "ubuntu-22.04" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {},

	"postCreateCommand": "python3 -m pip install --user ansible ansible-lint",

	"extensions": [
		"hashicorp.terraform",
		"redhat.ansible"
	],

	"features": {
		"terraform": "latest",
		"git": "latest",
		"python": "latest"
	}
}
